# Example configuration for SkyFactory 5 server
# Add this to your host configuration to enable the server
{
  cfg.hjome.gaming.minecraft = {
    enable = true;

    # Choose your preferred directory structure:
    # Option 1: Use ~/Games/Minecraft/Servers (default)
    dataDir = "$HOME/Games/Minecraft/Servers";
    useXdgDataDir = false;

    # Option 2: Use XDG data directory (~/.local/share/Minecraft/Servers)
    # dataDir = "$HOME/.local/share/Minecraft/Servers"; # This will be ignored if useXdgDataDir = true
    # useXdgDataDir = true;

    servers.skyfactory5 = {
      enable = true;
      port = 25565;
      maxPlayers = 2;
      motd = "Welcome to SkyFactory 5!";
      difficulty = "normal";
      jvmOpts = "-Xms4G -Xmx8G -XX:+UseG1GC -XX:+ParallelRefProcEnabled -XX:MaxGCPauseMillis=200";
      openFirewall = true; # Set to true if you want external access
      autoStart = true;
    };
  };
}
