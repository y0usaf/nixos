# AGS (Astal) color variables template
# Output: ~/.config/ags/colors.css
# Import in AGS: App.addWindow() with css: `@import url("colors.css"); ${styles}`
''
  /* Wallust-generated colors for AGS */

  /* Base colors */
  @define-color wallust_bg {{ background }};
  @define-color wallust_fg {{ foreground }};

  /* Terminal palette */
  @define-color wallust_color0 {{ color0 }};
  @define-color wallust_color1 {{ color1 }};
  @define-color wallust_color2 {{ color2 }};
  @define-color wallust_color3 {{ color3 }};
  @define-color wallust_color4 {{ color4 }};
  @define-color wallust_color5 {{ color5 }};
  @define-color wallust_color6 {{ color6 }};
  @define-color wallust_color7 {{ color7 }};
  @define-color wallust_color8 {{ color8 }};
  @define-color wallust_color9 {{ color9 }};
  @define-color wallust_color10 {{ color10 }};
  @define-color wallust_color11 {{ color11 }};
  @define-color wallust_color12 {{ color12 }};
  @define-color wallust_color13 {{ color13 }};
  @define-color wallust_color14 {{ color14 }};
  @define-color wallust_color15 {{ color15 }};

  /* Semantic aliases (GTK color syntax) */
  @define-color wallust_black {{ color0 }};
  @define-color wallust_red {{ color1 }};
  @define-color wallust_green {{ color2 }};
  @define-color wallust_yellow {{ color3 }};
  @define-color wallust_blue {{ color4 }};
  @define-color wallust_magenta {{ color5 }};
  @define-color wallust_cyan {{ color6 }};
  @define-color wallust_white {{ color7 }};
  @define-color wallust_bright_black {{ color8 }};
