_: {
  system.defaults.CustomUserPreferences."com.apple.driver.AppleBluetoothMultitouch.trackpad" = {
    "TrackpadRightClick" = 1; # Enable two-finger right-click
    "TrackpadMomentumScroll" = 0; # Disable momentum scrolling
    "TrackpadScrolling" = 0; # Disable natural scrolling (non-inverted)
  };
}
